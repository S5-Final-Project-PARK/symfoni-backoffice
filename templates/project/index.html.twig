{% extends 'base.html.twig' %}

{% block title "Les taches" %}

{% block body %}
<div class="container">
    <form method="get" class="mb-4">
        <div class="row">
            {# Barre de recherche par titre #}
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" placeholder="Recherche par titre" value="{{ searchTitle }}">
            </div>

            {# Bouton de filtrage #}
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filtrer</button>
            </div>
        </div>
    </form>


    <div class="d-flex justify-content-between my-2">
        <a href="{{ path('project.create') }}" class="btn btn-primary">Cr√©er un Projet</a>
    </div>

    <ul class="list-group">
        {% for project in projects %}
            <a class="list-group-item list-group-item-action" href="{{ url('project.show', {id: project.id, name: project.title}) }}"><strong>{{project.title}}</strong> (Tache : {{project.taskCount}})</a>
        {% endfor %}
    </ul>

    {{ knp_pagination_render(projects) }}
</div>
{% endblock %}
